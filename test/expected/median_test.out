-------------------------------------------
-- Timestamp
-------------------------------------------
-- ARRANGE
CREATE TABLE "mediantest_date"(val timestamp);
INSERT INTO mediantest_date(val)
SELECT TIMESTAMP 'epoch' + (i * INTERVAL '1 second')
FROM generate_series(0, 100000) as T(i);
-- ASCERTAIN
SELECT median(val) FROM mediantest_date;
