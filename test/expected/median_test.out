-- Multiple Selects
-------------------------------------------
-- ARRANGE
CREATE TABLE "mediantest_multiple"(a int, b int);
INSERT INTO mediantest_multiple (a, b)
SELECT i, 1000000 - i FROM generate_series(0, 10000) as T(i);
