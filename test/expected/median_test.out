-------------------------------------------
-- Basic even test, integer.
-------------------------------------------
-- ARRANGE
CREATE TABLE "mediantest_even"(val int);
INSERT INTO "mediantest_even" (val) VALUES
    (1),
    (3),
    (1),
    (3),
    (2);
-- ASCERTAIN
SELECT median(val) FROM mediantest_even;
 median 
--------
      2
(1 row)

